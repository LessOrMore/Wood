@{
    Layout = null;
}
@using WoodModel;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>菜单管理</title>
    <link href="~/Content/styles/admin/style.css" rel="stylesheet" />
    <link href="~/Content/styles/admin/themes/gray/easyui.css" rel="stylesheet" />
    <link href="~/Content/styles/admin/themes/icon.css" rel="stylesheet" />
    
    <script src="~/Scripts/Admin/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/Admin/jquery.easyui.min.js"></script>
    <script src="~/Scripts/Admin/FunctionJS.js"></script>
    <script src="~/Scripts/Admin/AdminSystem/MenuInfo.js"></script>
</head>
<body class="easyui-layout">
    <form id="form1" style="width:100%;height:100%;">
        <table id="menuTable" class="easyui-datagrid" title="菜单信息列表"
               style="width: auto; height:auto" data-options="fitColumns:true,rownumbers:true,singleSelect:true,iconCls: 'icon-search',method:'get',toolbar:'#tb'">
            <thead>
                <tr>
                    <th data-options="field:'MenuID',width:120,align:'left'">
                        菜单编号
                    </th>
                    <th data-options="field:'ParentMenuID',width:200,align:'left'">
                        菜单父级编号
                    </th>
                    <th data-options="field:'MenuName',width:200,align:'left'">
                        菜单名称
                    </th>
                    <th data-options="field:'Url',align:'left',width:'300'">
                        菜单Url
                    </th>
                    <th data-options="field:'Icon',align:'left',width:'200'">
                        菜单Icon
                    </th>
                </tr>
            </thead>
        </table>

        <div id="tb" style="padding: 5px; height: auto">
            <table cellpadding="0" cellspacing="0" style="width: 100%">
                <tr>
                    <td>
                        
                    </td>
                    <td>
                        <div style="margin-bottom: 5px;float:right">
                            <a href="#" class="easyui-linkbutton" iconcls="icon-add" onclick="btnHandler(0)" plain="true">新增</a>
                            <a href="#" class="easyui-linkbutton" iconcls="icon-edit" onclick="btnHandler(1)" plain="true">编辑</a>
                            <a href="#" class="easyui-linkbutton" iconcls="icon-remove" onclick="btnHandler(2)" plain="true">删除</a>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </form>
</body>
</html>
