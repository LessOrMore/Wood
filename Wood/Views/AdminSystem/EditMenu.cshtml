@{
    Layout = null;
}
@using WoodModel;

@model MenuInfoModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>菜单编辑</title>
    <link href="~/Content/styles/admin/style.css" rel="stylesheet" />
    <link href="~/Content/styles/admin/themes/gray/easyui.css" rel="stylesheet" />
    <link href="~/Content/styles/admin/themes/icon.css" rel="stylesheet" />
    
    
    <script src="~/Scripts/Admin/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/Admin/jquery.easyui.min.js"></script>
    <script src="~/Scripts/artDialog/artDialog.source.js"></script>
    <script src="~/Scripts/artDialog/iframeTools.source.js"></script>
    <script src="~/Scripts/Admin/FunctionJS.js"></script>
    <script src="~/Scripts/Admin/AdminSystem/MenuInfo.js"></script>
  
   
</head>
<body>
    @using (Html.BeginForm("EditMenu", "AdminSystem", FormMethod.Post))
    {

        <div class="bd">

            <div class="tipstitle_title settingtable bold bd todayInfoPanelTab rightPanelTitle_normal">
                <div class="tab_list_top" style="position: absolute">
                    <div id="basicTab" class="tab_list bd actived">
                        基本信息
                    </div>
                </div>
            </div>

            <div class="ScrollBar">
                <br />
                <div id="tb_basic" class="tabPanel">
                    <table border="0" cellpadding="0" cellspacing="0" class="frm">
                        <tr>
                            <th>
                                菜单编号：
                            </th>
                            <td>
                                @Html.TextBoxFor(model => model.MenuID)
                            </td>
                            <th>
                                菜单名称：
                            </th>
                            <td>
                                @Html.TextBoxFor(model => model.MenuName)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                父级菜单：
                            </th>
                            <td>

                                @{
                                    SelectList menuList = ViewBag.MenuList as SelectList;

                                    @Html.DropDownListFor(model => model.ParentMenuID, menuList);
                                }
                            </td>
                            <th>
                                Icon：
                            </th>
                            <td>
                                @Html.TextBoxFor(model => model.Icon)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Url：
                            </th>
                            <td colspan="3">
                                @Html.TextBoxFor(model => model.Url, new { style = "width:475px" })

                                @Html.HiddenFor(model => model.Flag)

                                @{
                                    if (ViewBag.ErrMsg != null && !string.IsNullOrEmpty(ViewBag.ErrMsg))
                                    {
                                        string errMsg = ViewBag.ErrMsg;
                                        @Html.Hidden("errMsg", errMsg)
                                    }
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="frmbottom">
            <a href="#" class="easyui-linkbutton" iconcls="icon-search" onclick="Enter();">确 认</a>
            <a href="#" class="easyui-linkbutton" iconcls="icon-search" onclick="OpenClose();">关 闭</a>
        </div>
    }
</body>
</html>
