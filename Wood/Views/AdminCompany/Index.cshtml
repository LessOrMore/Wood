
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>公司信息编辑</title>
    <link href="../../Content/styles/admin/style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="place">
        <span>位置：</span>
        <ul class="placeul">
            <li><a href="#">管理信息</a></li>
            <li><a href="#">公司信息</a></li>
        </ul>
    </div>

    <div class="formbody">

        <div class="formtitle"><span>基本信息</span></div>

        <ul class="forminfo">
            <li><label>公司名称</label><input name="" type="text" class="dfinput" style="width:300px" /><i>标题不能超过30个字符</i></li>
            <li><label>公司简介</label><textarea name="" cols="1" rows="5" class="textinput"></textarea></li>
            <li><label>详细介绍</label><textarea name="" cols="1" rows="10" class="textinput" style="height:150px"></textarea></li>
            <li><label>公司地址</label><input name="" type="text" class="dfinput"/></li>
            <li><label>公司电话</label><input name="" type="text" class="dfinput" /></li>
            <li><label>公司邮箱</label><input name="" type="text" class="dfinput" /></li>
            <li><label>&nbsp;</label><input name="" type="button" class="btn" value="确认保存" /></li>
        </ul>
    </div>
</body>
</html>
